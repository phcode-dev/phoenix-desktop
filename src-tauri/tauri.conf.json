{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run servePhoenix",
    "devPath": "../src/",
    "distDir": "../src/",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Phoenix Code",
    "version": "5.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "window": {
        "all": true
      },
      "fs": {
        "all": true,
        "scope": [
          "$RESOURCE/*"
        ]
      },
      "shell": {
        "sidecar": true,
        "scope": [
          { "name": "node", "sidecar": true }
        ]
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "Copyright (c) 2022 - present Core.ai",
      "deb": {
        "depends": []
      },
      "externalBin": ["./node"],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "dev.phcode",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [
        "app/*"
      ],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "windows": {
        "installMode": "passive"
      },
      "endpoints": [
        "https://releases.phcode.dev/{{target}}/{{arch}}/{{current_version}}"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDY2QTY2RjMxQUIzQkU0RDQKUldUVTVEdXJNVyttWmc2ODNSODlVcmZhS0dFRW1mYnBkaytvTDcrSDJXSlhYOHVrUWRyaXhHRjcK"
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 768,
        "minHeight": 600,
        "resizable": true,
        "title": "Phoenix Code",
        "width": 1024,
        "minWidth": 800
      }
    ]
  }
}
