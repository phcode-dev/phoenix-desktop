{
    "$schema": "../node_modules/@tauri-apps/cli/schema.json",
    "build": {
        "beforeBuildCommand": "",
        "beforeDevCommand": "npm run _watch_src-node",
        "devPath": "http://localhost:8000/src/",
        "distDir": "../src/",
        "withGlobalTauri": true
    },
    "package": {
        "productName": "Phoenix Code Experimental Build",
        "version": "3.2.6"
    },
    "tauri": {
        "allowlist": {
            "all": true,
            "fs": {
                "all": true,
                "scope": [
                    "$APPCONFIG/**",
                    "$APPDATA/**",
                    "$APPLOCALDATA/**",
                    "$APPCACHE/**",
                    "$APPLOG/**",
                    "$AUDIO/**",
                    "$CACHE/**",
                    "$CONFIG/**",
                    "$DATA/**",
                    "$LOCALDATA/**",
                    "$DESKTOP/**",
                    "$DOCUMENT/**",
                    "$DOWNLOAD/**",
                    "$EXE/**",
                    "$FONT/**",
                    "$HOME/**",
                    "$PICTURE/**",
                    "$PUBLIC/**",
                    "$RUNTIME/**",
                    "$TEMPLATE/**",
                    "$VIDEO/**",
                    "$RESOURCE/**",
                    "$APP/**",
                    "$LOG/**",
                    "$TEMP/**",
                    "**",
                    "**/**",
                    "$APPCONFIG/**/*.*",
                    "$APPDATA/**/*.*",
                    "$APPLOCALDATA/**/*.*",
                    "$APPCACHE/**/*.*",
                    "$APPLOG/**/*.*",
                    "$AUDIO/**/*.*",
                    "$CACHE/**/*.*",
                    "$CONFIG/**/*.*",
                    "$DATA/**/*.*",
                    "$LOCALDATA/**/*.*",
                    "$DESKTOP/**/*.*",
                    "$DOCUMENT/**/*.*",
                    "$DOWNLOAD/**/*.*",
                    "$EXE/**/*.*",
                    "$FONT/**/*.*",
                    "$HOME/**/*.*",
                    "$PICTURE/**/*.*",
                    "$PUBLIC/**/*.*",
                    "$RUNTIME/**/*.*",
                    "$TEMPLATE/**/*.*",
                    "$VIDEO/**/*.*",
                    "$RESOURCE/**/*.*",
                    "$APP/**/*.*",
                    "$LOG/**/*.*",
                    "$TEMP/**/*.*",
                    "**/*.*",
                    "**/**/*.*"
                ]
            },
            "shell": {
                "all": true,
                "execute": true,
                "sidecar": true,
                "open": true,
                "scope": [
                    {
                        "name": "phnode",
                        "sidecar": true,
                        "args": [{ "validator": "\\S*" }, { "validator": "\\S*" }]
                    }
                ]
            }
        },
        "cli": {
            "description": "Phoenix Code cli",
            "longDescription": "CLI to open project, run tests amd other things",
            "beforeHelp": "",
            "afterHelp": "",
            "args": [{
                "name": "quit-when-done",
                "description": "Quit after whatever the task assigned from CLI is done.",
                "short": "q"
            }]
        },
        "bundle": {
            "active": true,
            "category": "DeveloperTool",
            "copyright": "Copyright (c) 2022 - present Core.ai",
            "deb": {
                "depends": []
            },
            "appimage": {
                "bundleMediaFramework": false
            },
            "externalBin": [
                "phnode"
            ],
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "identifier": "io.phcode.dev",
            "longDescription": "Phoenix is a modern open-source IDE for the web, built for the browser",
            "macOS": {
                "entitlements": "../entitlements.plist",
                "exceptionDomain": "localhost",
                "frameworks": [],
                "providerShortName": null,
                "signingIdentity": null
            },
            "resources": [
